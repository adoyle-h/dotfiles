#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

if (( $# == 0 )); then
  cat <<EOF
Usage: $SUB_NAME enable <type> <name>...

Description: Enable matched <name> of <type>
EOF
  exit 0
fi

readonly ENABLED_DIR=$DOTFILES_DIR/enabled

# shellcheck source=./plugable.bash
. "$DOTFILES_DIR/bin/sub/plugable.bash"

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  if (( $# < 3 )); then
    echo "${!t_map[@]}"
  else
    readonly t=$2
    readonly ts=${t_map[$t]}
    find "$DOTFILES_DIR/$ts" -depth 1 -type f -name "*.bash" -print0 \
      | xargs -0 -n1 -I{} basename '{}' ".bash"
  fi
  exit 0
fi

readonly t=$1
readonly ts=${t_map[$t]}
shift 1
enable_it "$@"
