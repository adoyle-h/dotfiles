#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

if (( $# == 0 )); then
  cat <<EOF
Usage: $SUB_NAME list <type> [-a]

Description: Show enabled <type>

Arguments:
  type       Available values: alias, completion, plugin

Options:
  -a         Show all availables of <type>
EOF
  exit 0
fi

readonly ENABLED_DIR=$DOTFILES_DIR/enabled

# shellcheck source=./plugable.bash
. "$DOTFILES_DIR/bin/sub/plugable.bash"

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  if (( $# < 3 )); then
    echo "${!t_map[@]}"
  fi
  exit 0
fi

readonly t=$1
readonly ts=${t_map[$t]}
shift 1
list "$@"
