#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

declare -A map=(
  [alpine]=3
  [bash]=5
  [ubuntu]=22.04
  [prolog]=stable
)

declare -A image_map=(
  [prolog]=swipl
)

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  echo "${!map[@]}"
  echo "--help"
  exit 0
fi

if [[ $# == 0 ]] || [[ $1 == '--help' ]]; then
  cat <<EOF
Usage: a run-docker [-v <version>] <image> [image-options]

Available Images: ${!map[@]}
EOF
  exit 0
fi

if [[ ${1:-} == '-v' ]]; then
  VERSION=$2
  shift 2
fi

if [[ ${1:-} == '-c' ]]; then
  COMMAND=$2
  shift 2
fi

readonly name=$1
shift

VERSION=${VERSION:-${map[$name]}}
IMAGE=${image_map[$name]:-$name}

echo "Run docker: $IMAGE:$VERSION"
if [[ -n ${COMMAND:-} ]]; then
  docker run --rm -it "$@" "$IMAGE":"$VERSION" "$COMMAND"
else
  docker run --rm -it "$@" "$IMAGE":"$VERSION"
fi
