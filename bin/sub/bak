#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
set -o errtrace
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

# Usage: $SUB_NAME bak <file>
# Description: Create a backup for the file

if (( $# == 0 )); then
  cat <<EOF
Usage: $SUB_NAME bak <file>

Description: Create a backup for the file
EOF
  exit 0
fi

# Provide sub completions
if [[ "${1:-}" == "--complete" ]]; then
  if [[ $COMP_CWORD -lt 3 ]]; then
    result=$(compgen -f "$2")
    if [[ -d $result ]]; then
      compgen -f "$result/"
    else
      echo "${result[@]}"
    fi
  fi
  exit 0
fi

file=$1
ext=bak
backup_file=${file}.${ext}

if [[ -e ${backup_file} ]]; then
  echo "Cannot create ${backup_file}. File existed." >&2
  exit 1
fi

cp "$file" "$backup_file"
echo "Created backup file: $backup_file"
