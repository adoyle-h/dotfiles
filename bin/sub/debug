#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail
(shopt -p inherit_errexit &>/dev/null) && shopt -s inherit_errexit

# Provide sub completions
if [ "${1:-}" = "--complete" ]; then
  if [[ $COMP_CWORD -lt 3 ]]; then
    echo "open close --help"
  fi

  exit 0
fi

readonly flag=${1:-}
readonly debug_file="$DOTFILES_DEBUG_FILE"

if [[ $flag == open ]]; then
    touch "$debug_file"
    echo "Debug mode enabled"
    echo "Run \"$SUB_NAME debug close\" or \"rm $debug_file\" to disable debug mode"
elif [[ $flag == close ]]; then
    rm -f "$debug_file"
    echo "Debug mode disabled"
else
    cat <<EOF
USAGE: a debug open
       a debug close
       a debug --help
EOF
fi
